/**
 * @file Firebase Security Rules for Firestore.
 *
 * Core Philosophy:
 * This ruleset enforces a default-deny policy. All reads and writes are
 * disallowed unless explicitly permitted by a rule.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Default deny all reads and writes to any collection not specified below.
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow anyone to submit a contact form message.
    // Deny read, update, or delete access to everyone to protect privacy.
    match /contactFormSubmissions/{submissionId} {
      allow create: if true;
      allow read, update, delete: if false;
    }

    // Rules for the admin_users collection
    match /admin_users/{userId} {
      // Allow an authenticated user to read their OWN admin document.
      // This is crucial for the application to verify if the user is an admin.
      allow get: if request.auth != null && request.auth.uid == userId;

      // Prevent anyone from listing all admin users.
      allow list: if false;
      
      // Prevent creating, updating, or deleting admin documents from the client.
      // These should be managed from the Firebase Console for security.
      allow create, update, delete: if false;
    }
  }
}
